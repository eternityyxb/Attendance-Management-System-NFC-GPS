<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/Skin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headertext"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:text="Profile"
        android:textColor="@color/Browning"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/studentID"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/Browning"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/studentID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/Browning"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/studentID"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/studentName"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/Browning"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentID"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/studentName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textColor="@color/Browning"
        android:textSize="15dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/studentName"
        app:layout_constraintTop_toBottomOf="@+id/studentID1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/studentEmail"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/Browning"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentName"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/studentEmail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/Browning"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/studentEmail"
        app:layout_constraintTop_toBottomOf="@+id/studentName1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/studentGender"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/Browning"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentEmail"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/studentGender1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/Browning"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/studentGender"
        app:layout_constraintTop_toBottomOf="@+id/studentEmail1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/studentIC"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/Browning"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentGender"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/studentIC1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/Browning"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/studentIC"
        app:layout_constraintTop_toBottomOf="@+id/studentGender1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/studentProgramme"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/Browning"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentIC"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/studentProgramme1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/Browning"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/studentProgramme"
        app:layout_constraintTop_toBottomOf="@+id/studentIC1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/studentIntake"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/Browning"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentProgramme"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/studentIntake1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/Browning"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/studentIntake"
        app:layout_constraintTop_toBottomOf="@+id/studentProgramme1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/studentNationality"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/Browning"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentIntake"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/studentNationality1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/Browning"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/studentNationality"
        app:layout_constraintTop_toBottomOf="@+id/studentIntake1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/studentPhone"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@color/Browning"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentNationality"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/studentPhone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/Browning"
        android:textSize="15dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/studentPhone"
        app:layout_constraintTop_toBottomOf="@+id/studentNationality1"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/logout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentPhone1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/Browning"
        android:background="@drawable/button_border"/>


</androidx.constraintlayout.widget.ConstraintLayout>